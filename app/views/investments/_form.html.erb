<%= simple_form_for(@investment) do |f| %>
	<%= f.error_notification %>
	<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

	<div class="form-inputs">
		<%= f.association :asset,
			collection: Asset.order(abbreviation: :asc).collect { |a| ["#{a.abbreviation} - #{a.name}", a.id] },
			input_html: { disabled: @investment.persisted? } %>

		<div class="form-row">
			<div class="col-md-4">
				<%= f.input :quantity, as: :string, input_html: { class: "integer-input" } %>
			</div>
			<div class="col-md-4">
				<%= f.input :value_invested, as: :string, input_html: { class: "money-input"} %>
			</div>
			<div class="col-md-4">
				<%= f.input :invested_at, as: :string, input_html: { type: 'date' } %>
			</div>
		</div>
	</div>

	<div class="form-actions">
		<%= yield f %>
	</div>
<% end %>
