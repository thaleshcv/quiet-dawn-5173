<%= link_to asset_path(portfolio.item_asset_id), class: "list-group-item list-group-item-action" do %>
	<div class="row justify-content-between align-items-center">
		<div class="col-md col-sm-12">
			<p>
				<strong class="mr-1"><%= portfolio.item_asset_abbr %></strong>
				<%= portfolio.item_asset_name %>
			</p>
			<div class="d-flex w-100">
				<span class="small">
					<strong class="mb-1 d-block text-uppercase">Value invested</strong>
					<%= number_to_currency(portfolio.item_value_invested) %>
				</span>
				<span class="mx-5"></span>
				<span class="small">
					<strong class="mb-1 d-block text-uppercase">Quantity</strong>
					<%= portfolio.item_quantity %>
				</span>
			</div>
		</div>
		<div class="col-md-auto col-sm-12">
			<div class="my-3 text-sm-center text-md-right">
				<small class="font-weight-bold d-block text-uppercase">Current value</small>
				<h3>
					<%= number_to_currency(portfolio.item_current_value) %>
					(<%= difference_in_percent(portfolio.item_value_invested, portfolio.item_current_value) %>)
				</h3>
			</div>
		</div>
	</div>
<% end %>
