<%= content_for :public do %>
	<div class="signin-form">
		<h2 class="subtitle has-text-centered">Esqueceu sua senha?</h2>
		<%= render 'partials/flash_messages' %>
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<%= f.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
			<%= f.button :submit, "Enviar instruções para redefinir minha senha", class: "button is-primary is-fullwidth" %>
		<% end %>
		<div class="my-2">
			<%= render "devise/shared/links" %>
		</div>
	</div>
<% end %>
