<%= render "partials/flash_messages" %>

<%= content_for :page_head do %>
	<h1 class="title">Relatórios</h1>
<% end %>

<% if @reports.any? %>
	<%= render 'reports_table' %>
<% else %>
	<%= render partial: "partials/no_content",
		locals: {
			message: <<~MSG
				Desculpe. Você ainda não possui relatórios.<br/>
				Os relatórios são gerados automaticamente toda segunda-feira pela manhã.
			MSG
		} %>
<% end %>
