<%= content_for :main_content do %>
	<%= render "partials/flash_messages" %>
	<%= form_with scope: :explore,
    id: "explore_form",
    url: explore_assets_path,
    method: "get",
    local: true do |f| %>
		<div class="dropdown">
			<div class="form-group border-bottom dropdown-toggle" id="explore_dropdown"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<%= f.text_field :asset_name,
          value: (@explore_facade.asset_title if @explore_facade.present?),
          style: "font-size:2rem;",
          class: "w-100 border-0",
          autocomplete: "off",
          placeholder: "Search asset by abbreviation or name..." %>
			</div>
			<div class="dropdown-menu w-100" id="explore_dropdown_menu" aria-labelledby="explore_dropdown">
				<p class="text-center text-muted font-italic">
					Nothing to display.
				</p>
			</div>
		</div>
		<%= f.hidden_field :asset_id %>
	<% end %>
	<%= yield %>
<% end %>

<%= render template: "layouts/application" %>
