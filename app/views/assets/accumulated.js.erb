var chart = Chartkick.charts["accumulated-value-chart"];
var chartOptions = chart.getOptions();

var newOptions = Object.assign(chartOptions, {
min: <%= @accumulated_value_chart.minmax_chart_value.first %>,
max: <%= @accumulated_value_chart.minmax_chart_value.last %>
});

chart.updateData(<%= @chart_data.to_json.html_safe %>, newOptions);

document.querySelectorAll(".chart-range-options > button").forEach(function(value) {
value.disabled = false;
});

document.querySelector(".chart-range-options > button.range-<%= params[:range_type] %>").disabled = true;
