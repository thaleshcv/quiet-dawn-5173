<h2>Your assets</h2>
<div class="row mt-2">
	<% @user_assets.each do |asset| %>
		<div class="col-sm-6 col-md-3">
			<div class="card w-100 mb-1 text-center">
				<div class="card-body">
					<h5 class="card-title"><%= asset.abbreviation %></h5>
					<h6 class="card-subtitle mb-2 text-muted"><%= asset.name %></h6>
				</div>
				<div class="card-footer text-muted">
					<%= link_to 'View this asset', explore_path(asset_id: asset) %>
				</div>
			</div>
		</div>
	<% end %>
</div>
