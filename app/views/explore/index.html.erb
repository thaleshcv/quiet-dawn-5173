<div class="block">
	<h2 class="subtitle">Your assets</h2>
	<div class="columns is-multiline">
		<% @user_assets.each do |asset| %>
			<div class="column is-one-third-desktop is-half-mobile">
				<%= link_to explore_assets_path(asset_id: asset) do %>
					<div class="card has-text-centered">
						<div class="card-content">
							<p class="title"><%= asset.abbreviation %></p>
							<p class="subtitle"><%= asset.name %></p>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
