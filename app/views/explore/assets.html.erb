<div class="columns">
	<div class="column is-half-desktop is-full-mobile">
		<div class="is-flex">
			<div class="heading">
				Current price&nbsp;
				<span class="has-text-weight-bold">
					<%= number_to_currency(@explore_facade.current_price) %>
					<%= styled_numeric(@explore_facade.price_var_pct) do |num| %>
						(<%= number_to_percentage(@explore_facade.price_var_pct, precision: 2) %>)
					<% end %>
				</span>
			</div>
			<div class="mx-2"></div>
			<div class="heading">
				Updated at&nbsp;
				<span class="has-text-weight-bold">
					<%= I18n.l @explore_facade.current_price_at, format: :long %>
				</span>
			</div>
		</div>
	</div>

	<div class="column is-half-desktop is-full-mobile">
		<div class="level">
			<div class="level-item mr-1 has-text-right-desktop has-text-centered-mobile">
				<div>
					<p class="heading">Open</p>
					<p class="title">
						<%= number_to_currency(@explore_facade.open_price) %>
					</p>
				</div>
			</div>
			<div class="level-item mr-1 has-text-right-desktop has-text-centered-mobile">
				<div>
					<p class="heading">Lowest</p>
					<p class="title">
						<%= number_to_currency(@explore_facade.lowest_price) %>
					</p>
				</div>
			</div>
			<div class="level-item mr-1 has-text-right-desktop has-text-centered-mobile">
				<div>
					<p class="heading">Highest</p>
					<p class="title">
						<%= number_to_currency(@explore_facade.highest_price) %>
					</p>
				</div>
			</div>
			<div class="level-item mr-1 has-text-right-desktop has-text-centered-mobile">
				<div>
					<p class="heading">Volume</p>
					<p class="title">
						<%= number_to_human(@explore_facade.volume) %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="block">
	<div class="columns">
		<div class="column is-half-desktop is-full-mobile">
			<h3 class="subtitle">Price variation</h3>
		</div>
		<div class="column has-text-right is-half-desktop is-full-mobile">
			<div class="chart-range-options">
				<%= chart_range_option 'Today',
					explore_prices_path(asset_id: @explore_facade.asset_id, range_type: '1d'),
					range: '1d',
					disabled: @explore_facade.range_type == '1d' %>
				<%= chart_range_option '30 Days',
					explore_prices_path(asset_id: @explore_facade.asset_id, range_type: '30d'),
					range: '30d',
					disabled: @explore_facade.range_type == '30d' %>
				<%= chart_range_option '60 Days',
					explore_prices_path(asset_id: @explore_facade.asset_id, range_type: '60d'),
					range: '60d',
					disabled: @explore_facade.range_type == '60d' %>
				<%= chart_range_option '90 Days',
					explore_prices_path(asset_id: @explore_facade.asset_id, range_type: '90d'),
					range: '90d',
					disabled: @explore_facade.range_type == '90d' %>
			</div>
		</div>
	</div>
</div>

<%= area_chart @explore_facade.prices_chart_data,
		id: "asset-prices-chart",
		legend: false,
    min: @explore_facade.minmax_chart_value.first,
    max: @explore_facade.minmax_chart_value.last,
		curve: false,
		prefix: "$",
		thousands: ",",
		decimals: "." %>
