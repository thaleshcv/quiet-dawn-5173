<div class="dropdown" id="asset_dropdown">
	<div style="width:100%;" class="dropdown-trigger" aria-haspopup="true" aria-expanded="false">
		<%= text_field_tag nil, (selected_asset.title if selected_asset.present?),
      id: "asset_dropdown_input",
      autocomplete: "off",
      placeholder: "Search asset by abbreviation or name...",
      class: input_html[:class],
      data: input_html[:data] %>
	</div>
	<div style="width:100%;" class="dropdown-menu" aria-labelledby="asset_dropdown">
		<div class="dropdown-content" id="asset_dropdown_content">
			<p class="has-text-centered is-italic">
				Nothing to display.
			</p>
		</div>
	</div>
	<%= form.hidden_field name, id: "asset_dropdown_hidden" %>
</div>
